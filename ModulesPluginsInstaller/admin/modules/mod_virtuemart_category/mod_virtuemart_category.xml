<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5.0">
    <name>VirtueMart category</name>
    <creationDate>February 2011</creationDate>
    <author>The VirtueMart Development Team</author>
    <authorUrl>http://www.virtuemart.net</authorUrl>
    <copyright>Copyright (C) 2004-2011 Virtuemart Team. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>1.9.8</version>
    <description>MOD_VIRTUEMART_CATEGORY_DESC</description>
    <files>
        <filename module="mod_virtuemart_category">mod_virtuemart_category.php</filename>
        <filename module="mod_virtuemart_category">helper.php</filename>
        <filename module="mod_virtuemart_category">index.html</filename>
        <filename module="mod_virtuemart_category">tmpl/all.php</filename>
        <filename module="mod_virtuemart_category">tmpl/current.php</filename>
        <filename module="mod_virtuemart_category">tmpl/default.php</filename>
        <filename module="mod_virtuemart_category">tmpl/index.html</filename>
    </files>
    <params>
        <param name="Parent_Category_id" type="text" default="0" label="PARENT_CATEGORY_ID" description="PARENT_CATEGORY_ID_DESC" />
        <param name="layout" type="radio" default="default" label="CHILD_CAT_MENU_TYPE" description="CHILD_CAT_MENU_TYPE_DESC">
            <option value="current">CURRENT</option>
            <option value="default">ACCORDEON</option>
            <option value="all">ALL_CHILD</option>
        </param>
        <param name="cache" type="radio" default="0" label="Enable Cache" description="Select whether to cache the content of this module">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
        <param name="class_sfx" type="text" default="" label="Menu Class Suffix" description="A suffix to be applied to the css class of the menu items" />
    </params>
</install>
